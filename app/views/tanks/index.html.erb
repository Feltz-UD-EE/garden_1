<p style="color: green"><%= notice %></p>

<h1>Tanks</h1>

<div id="tanks">
<table class="datatable tanks responsive no-wrap" id="tanks">
  <thead>
    <tr>
      <th>Name</th>
      <th>Volume</th>
      <th>Status</th>
      <th>Annual Harvest</th>
    </tr>
  </thead>
  <tbody>
    <% @tanks.each do |tank| %>
      <tr>
        <td><%= link_to tank.name, tank_path(tank) %></td>
        <td><%= tank.volume %></td>
        <td><%= tank.needs_pumping ? "Pump On" : "Pump Off" %></td>
        <td><%= tank.total_harvest_this_year %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to "New tank", new_tank_path %>
