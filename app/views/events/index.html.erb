<p style="color: green"><%= notice %></p>

<h1>Events</h1>

<div id="events">
<table class="datatable responsive no-wrap">
  <tr>
    <th>Date</th>
    <th>Crop + Zone</th>
    <th>Description</th>
    <th>Harvest</th>
  </tr>
  <% @events.each do |event| %>
    <tr>
        <td><%= link_to event.date.strftime("%Y-%b-%d"), event_path(event) %></td>
        <td><%= link_to event.crop.name, crop_path(event.crop) %>
            <%= link_to event.crop.zone.number, zone_path(event.crop.zone) %></td>
        <td><%= event.description %></td>
        <td><%= event.harvest.present? ? event.harvest : "" %></td>
    </tr>
  <% end %>
</table>
</div>

<%= link_to "New event", new_event_path %>
